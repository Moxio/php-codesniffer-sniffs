{
    "name": "moxio/php-codesniffer-sniffs",
    "type": "phpcodesniffer-standard",
    "description": "Custom sniffs for PHP_CodeSniffer",
    "license": "MIT",
    "keywords" : [ "phpcs", "PHP_CodeSniffer", "sniffs", "standards" ],
    "authors": [
        {
            "name": "Moxio",
            "homepage": "https://www.moxio.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Moxio\\CodeSniffer\\MoxioSniffs\\": "MoxioSniffs/"
        }
    },
    "require": {
        "php": "^7.1 || ^8.0",
        "squizlabs/php_codesniffer": "^3.0.0",
        "slevomat/coding-standard": "^6.0 || ^7.0 || ^8.0 <= 8.6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5.12"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
